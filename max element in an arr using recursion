#include<stdio.h>
#include<stdlib.h>
int maximum(int arr[100],int n)
{
    int max;
    if(n==1)
    {
        max=arr[0];
        return max;
    }
    else
    return max=arr[n]>maximum(arr,n-1)?arr[n]:maximum(arr,n-1);//<for min
}
int main()
{
    int arr[100],n;
    printf("enter the size of an arr:");
    scanf("%d",&n);
    int *ptr=(int *)malloc(n*sizeof(int));
    printf("enter the array elements:");
    for(int i=0;i<n;i++)
    scanf("%d",ptr+i);
    int (*fptr)(int [],int);
    fptr=maximum;
    fptr(ptr,n);
    printf("%d",fptr(ptr,n));
}


second_largest element
#include<stdio.h>
#include<stdlib.h>
int maximum(int arr[100],int n)
{
    int max=arr[0],i;
    for(i=0;i<n;i++)
    {
        if(arr[i]>max)
        max=arr[i];
    }
    int sec_max=arr[0];
     for(i=0;i<n;i++)
     {
         if(arr[i]>sec_max && arr[i]<max)
         sec_max=arr[i];
     }
    printf("max:%d,sec_max:%d",max,sec_max);
}
int main()
{
    int arr[100],n;
    printf("enter the size of an arr:");
    scanf("%d",&n);
    int *ptr=(int *)malloc(n*sizeof(int));
    printf("enter the array elements:");
    for(int i=0;i<n;i++)
    scanf("%d",ptr+i);
    int (*fptr)(int [],int);
    fptr=maximum;
    fptr(ptr,n);
}
