#include<stdio.h>
#include<string.h>
int str_cmp(char *str1,char *str2)
{
    static int i;
    static int count=0;
    int l1=strlen(str1);
    int l2=strlen(str2);
    if(l1!=l2)
    {
    return 0;
    }
    else if(i<l1)
    {
        if(str1[i]==str2[i])
        count++;
        i++;
        str_cmp(str1,str2);
    }
    
    if(count==i)
    {
    return 1;
    }
    else
    {
    return 0;
    }
}
    

int main()
{
    char str1[20];
    char str2[20];
    int c;
    printf("enter the str1");
    scanf("%s",str1);
    printf("enter the str2");
    scanf("%s",str2);
    int (*fptr)(char[],char[]);
    fptr= str_cmp;
    c=fptr(str1,str2);
    if(c==0)
    printf("strings are not equal");
    else
    printf("strings are equal");
    return 0;
}

