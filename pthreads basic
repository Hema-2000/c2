#include<stdio.h>
#include<pthread.h>
#include<unistd.h>
#include<stdint.h>
int arr[]={2,3};
void *fun(void *s)
{
    int sum=0;
    int *x=s;
    sum=x[0]+x[1];
    printf("%d\n",sum);
   pthread_exit((void*)(intptr_t)sum);
    
}
int main() {
   pthread_t tid1;
   void *result;
   
   pthread_create(&tid1,NULL,fun,(void *)arr);
   pthread_join(tid1,&result);
   printf("in the main function:\n");
   printf("returned sum:%ld",(intptr_t)result);
   

}
