#include<stdio.h>
int print(int *arr,int n)
{
    int i,temp;
    printf("enter the array elements:");
    for(i=0;i<n;i++)
    {
        scanf("%d",(arr+i));
    }
    for(i=0;i<n;i++)
    {
        printf("%d ",*(arr+i));
    }
    printf("\n");
    for(i=0;i<n/2;i++)
    {
        temp=arr[i];
        arr[i]=arr[n-i-1];
        arr[n-i-1]=temp;
    }
    for(i=0;i<n;i++)
    {
        printf("%d ",arr[i]);
    }
    
}
int main()
{
   int arr[10],n;
   int *ptr=arr;
   printf("enter the size of arr");
   scanf("%d",&n);
   int (*fptr)(int *,int);
   fptr=print;
   fptr(arr,n);
   
}
