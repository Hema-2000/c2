#include<stdio.h>
int print(int *ptr,int n)
{
    int i;
     printf("enter the array elements");
   for(int i=0;i<n;i++)
       scanf("%d",(ptr+i));
   for(int i=0;i<n;i++)
       printf("%d ",*(ptr+i));
    
}
int main()
{
   int arr[10],n;
   int *ptr=arr;
   printf("enter the size of arr");
   scanf("%d",&n);
   int (*fptr)(int *,int);
   fptr=print;
   fptr(arr,n);
   
}
