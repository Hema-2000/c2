#include<stdio.h>
int main()
{
    int num,sum=0,rem;
    printf("enter the num ");
    scanf("%d",&num);
    int temp=num;
    while(num!=0)
    {
        rem=num%10;
        sum=sum*10+rem;
        num=num/10;
    }
    num=temp;
    if(num==sum)
    printf("no. is palindrome");
    else
    printf("no. is not a palindrome");
    return 0;
}
