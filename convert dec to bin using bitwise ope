#include<stdio.h>
#define SIZE 8
void binary_bits(int a)
{
   int arr[100];
   int index=SIZE-1;
   while(a>0)
   {
       arr[index]=a & 1;
       index--;
       a=a>>1;
   }
   for(int i=0;i<SIZE;i++)
   {
   printf("%d",arr[i]);
   }
}
int main()
{
    int a=10;
    void (*fptr)(int);
    fptr=&binary_bits;
    fptr(a);
}
