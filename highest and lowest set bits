highest set bit in a number

#include<stdio.h>
#define SIZE 8
int highest_set_bit(int a)
{
    int i,res=0;
    for(i=0;i<SIZE;i++)
{
     if(1 & (a>>i)==1)
     res=i;
}
 printf("%d",res);
}

int main()
{
    int a=6;
    int (*fptr)(int);
    fptr=&highest_set_bit;
    fptr(a);
}


lowest set bit in a num
#include<stdio.h>
#define SIZE 8
int lowest_set_bit(int a)
{
    int i,res=0;
    for(i=0;i<SIZE;i++)
{
     if(1 & (a>>i)==1)
     {
     res=i;
     break;
     }
}
 printf("%d",res);
}

int main()
{
    int a=8;
    int (*fptr)(int);
    fptr=&lowest_set_bit;
    fptr(a);
}
