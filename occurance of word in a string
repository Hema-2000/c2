#include<stdio.h>
#include<string.h>
#include<stdlib.h>
void remove_occ(char *a,char ch[])
{
    int l=strlen(a);
    int i,j,flag=0;
    for(i=0;i<l;i++)
    {
        if(a[i]==ch[0])
        {
        flag=1;
        for(j=0;ch[i]!='\0';j++)
        {
            if(a[i+j]!=ch[j])
            {
            flag=0;
            break;
            }
        }
        }
        if(flag==1)
        break;
    }
    
   (flag==0)?printf("word is not found"):printf("word:%s is found at %d pos",ch,i+1);
}
int main()
{
    char *p=(char *)malloc(sizeof(char)*100);
    char ch[100];
    printf("enter the string:");
    fgets(p,100,stdin);
    printf("enter the word to search:");
    scanf(" %s",ch);
    void (*fptr)(char *,char[]);
    fptr=remove_occ;
    fptr(p,ch);
}
