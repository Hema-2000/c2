#include<stdio.h>
int *fun(int[],int size);
int i;
int main()
{
    int arr[10];
    int size;
    printf("enter the size of arr:");
    scanf("%d",&size);
    printf("enter the array elements:");
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }
    fun(arr,size);
    size--;
    printf("after deletion the array elements are:");
    for(i=0;i<size;i++)
    {
        printf("%d",arr[i]);
    }
}
int *fun(int arr[],int size)
{
    int pos;
    printf("enter the pos:");
    scanf("%d",&pos);
    for( i=(pos-1);i<size;i++)
    {
        arr[i]=arr[i+1];
    }
    return arr;
}
