#include<stdio.h>
#include<stdlib.h>
int insert(int *arr ,int n)
{
    int p,i;
    printf("enter the pos to delete:");
    scanf("%d",&p);
    for(i=p-1;i<n-1;i++)
    {
            arr[i]=arr[i+1];
    }
    for(i=0;i<n-1;i++)
    {
       printf("%d ",*(arr+i)); 
    }
    
    
}
int main()
{
    int arr[100],n;
    printf("enter the size of an arr:");
    scanf("%d",&n);
    int *ptr=(int *)malloc(n*sizeof(int));
    printf("enter the array elements:");
    for(int i=0;i<n;i++)
    scanf("%d",ptr+i);
    int (*fptr)(int *,int);
    fptr=insert;
    fptr(ptr,n);
}
