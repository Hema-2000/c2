#include <stdio.h>
#include <string.h>
int count(char str[])
{
   int i,count=0,temp=0;
    for(i=0;str[i]!='\0';i++)
    {
       
        if(str[i]!=32 && str[i]!='\0' )
        {
         count++;
        }
       else 
       {
           if(count>temp)
           {
           temp=count;
           count=0;
           }
            count=0;
       }
      
    } 
    return temp;
}
int main()
{
    char str[]="today i have an interview ";
    int (*fptr)(char[]);
    fptr = count;
  
printf("%d",fptr(str));
    return 0;
}
