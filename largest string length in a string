#include<stdio.h>
//int count=0;
int lar_str(char str[])
{
    int i,temp=0,count=0;
    for(i=0;str[i]!='\0';i++)
    {
        count++;
        if(str[i]==32)
        {
            if(temp<count)
            {
            temp=count-1;
            count=0;
            }
            count=0;
        }
        
    }
    return temp;
}
int main()
{
    char str[]="my name is hemalatha ";
    int (*fptr)(char[]);
    fptr=lar_str;
    //fptr(str);
    printf("%d",fptr(str));
}
