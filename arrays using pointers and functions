#include<stdio.h>
#include<stdlib.h>
void reverse(int *ptr,int l)
{
  int i,temp,sum=0;
  for(i=0;i<l/2;i++)
  {
      temp=*(ptr+i);
      *(ptr+i)=*(ptr+(l-i-1));
      *(ptr+(l-i-1))=temp;
  }
  printf("\n");
  for(i=0;i<10;i++)
 {
 printf("%d ",*(ptr+i));
 }
  printf("\n");
 printf("sum of array elements are:");
  printf("\n");
 for(i=0;i<10;i++)
 {
     sum=sum+(ptr[i]);
 
 }
 printf("%d ",sum);
}
int main()
{
  int i,temp;
  int arr[10];
  printf("%ld",sizeof(arr));
  int *ptr=arr;
  printf("enter the elements in an array:");
  for(i=0;i<10;i++)
  {
      scanf("%d",(ptr+i));
  }
 temp= *(ptr+0);
 *(ptr+0)=*(ptr+9);
 *(ptr+9)=temp;
 for(i=0;i<10;i++)
 {
 printf("%d ",*(ptr+i));
 }
 reverse(ptr,10);
  return 0;
}
