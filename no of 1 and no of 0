#include<stdio.h>
#define SIZE 8
void lsb(int a)
{
    int arr[100];
    int count=0,count1=0;
    printf("enter the value of a:");
    scanf("%d",&a);
    int i=0;
    while(a>0)
    {
    arr[i]=a%2;
    a=a/2;
    i++;
    }
    for( i=3;i>=0;i--)
    {
       printf("%d",arr[i]) ;
    }
    printf("\n");

    for(i=3;i>=0;i--)
    {
        if(arr[i]==1)
        count++;
        else
        count1++;
        
    }
    printf("%d ",count);
    printf("\n%d ",count1);
}
int main()
{
    int a;
    void (*fptr)(int);
    fptr=&lsb;
    fptr(a);
    
    
}
