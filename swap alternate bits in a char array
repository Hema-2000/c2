#include<stdio.h>
char *swap_alter(char arr[],int size)
{
    int i;
    int temp;
    printf("before swaping:");
    for(i=0;i<size;i++)
    {
        printf("%c",arr[i]);
    }
    printf("\n");
    printf("after alternate swaping:");
    for(i=0;i<size/2;i++)
    {
        if(arr[i]!=32)
        {
        temp=arr[i];
        arr[i]=arr[i+6];
        arr[i+6]=temp;
        }
    }
   return arr;
}
int main()
{
    char arr[]="10 01 00 11";
    int size=sizeof(arr);
    char* (*fptr)(char[],int);
    fptr=swap_alter;
    fptr(arr,size);
     for(int i=0;i<size;i++)
    {
        printf("%c",arr[i]);
    }
    
    
}

output:
before swaping:10 01 00 11
after alternate swaping:00 11 10 01
