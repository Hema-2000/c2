#include<stdio.h>
#define N 20
int main()
{
    char str[N];
    int i,flag,len;
    printf("enter the str:");
    scanf("%s",str);
    for(len=0;str[len]!='\0';len++);
    for(i=0;i<len;i++)
    {
       if(str[i]!=str[len-i-1])
       flag=0;
       break;
    }
    (flag==0)?printf("%s is not a palindrome",str):printf("%s is  a palindrome",str);
        
    
    
}
