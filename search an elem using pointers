#include<stdio.h>
int found(int *ptr,int n)
{
    int num,i,flag=0;
    printf("enter the num:");
    scanf("%d",&num);
    for(i=0;i<n;i++)
    {
        if(num==*(ptr+i))
        flag++;
    }
    (flag>0)?printf("array element is found"):printf("array element is not found");
}
int main()
{
    int arr[10];
    int *ptr=arr;
    int i,n;
    printf("enter the size of an array:");
    scanf("%d",&n);
    printf("enter the elements in an array:");
    for(i=0;i<n;i++)
    {
        scanf("%d",(ptr+i));
    }
    printf("the array elements are:");
    for(i=0;i<n;i++)
    {
        printf("%d",*(ptr+i));
    }
    printf("\n");
    int (*fptr)(int *,int);
    fptr=found;
    fptr(ptr,n);
}
