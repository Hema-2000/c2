#include <stdio.h>
int bubble_sort(int arr[],int size );
int print(int arr[],int size);
int swap(int *x,int *y)
{
    int temp;
    temp=*x;
    *x=*y;
    *y=temp;
}
int main()
{
    int arr[]={20,80,60,10,50};
    int size=sizeof(arr)/sizeof(int);
    int (*fptr)(int[],int );
    fptr=bubble_sort;
    fptr(arr,size);
    printf("the sorted elements in an array:\n");
    int (*fptr1)(int [],int);
    fptr=print;
    fptr(arr,size);
    return 0;
}
int bubble_sort(int arr[],int size)
{
    int i,j;
    for(int i=0;i<size;i++)
    {
        for(j=0;j<size-i-1;j++)
        {
            if(arr[j]>arr[j+1])
            {
                swap(&arr[j],&arr[j+1]);
            }
        }
    }
}
int print(int arr[],int size)
{
    for(int i=0;i<size;i++)
    {
        printf("%d ",arr[i]);
    }
}
