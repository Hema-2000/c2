#include<stdio.h>
#include<string.h>
int main()
{
    char str[100]="Iam very luckiest person";
    int len =strlen(str);
    char max[100],min[100],s[100][100];
    int i=0,j=0,k;
    for(k=0;k<len;k++)
    {
        if(str[k]!=' ' && str[k]!='\0')
        {
            s[i][j++]=str[k];
        }
        else
        {
           s[i][j]='\0';
            i++;
            j=0;
        }
    }
   int  l=i+1;
    strcpy(min,s[0]);
    strcpy(max,s[0]);
    for(k=0;k<l;k++)
    {
        if(strlen(min)>strlen(s[k]))
        {
            strcpy(min,s[k]);
        }
        else if(strlen(max)<strlen(s[k]))
        {
            strcpy(max,s[k]);
        }
    }
    printf("the smallest word is : %s \nthe longest word is :%s",min,max);
}

output:
the smallest word is : Iam 
the longest word is :luckiest
