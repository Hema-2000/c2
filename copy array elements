#include<stdio.h>
#include<stdlib.h>
#define N 2
int copy(int arr[100],int n)
{
    int i;
    int a[100];
    printf("first array elements are:");
    for(i=0;i<n;i++)
    printf("%d ",arr[i]);
    for(i=0;i<n;i++)
    {
        a[i]=arr[i];
    }
    printf("\n");
    printf("second array elements are:");
    for(i=0;i<n;i++)
    printf("%d ",a[i]);
}
int main()
{
    int arr[100],n;
    printf("enter the size of an arr:");
    scanf("%d",&n);
    int *ptr=(int *)malloc(n*sizeof(int));
    printf("enter the array elements:");
    for(int i=0;i<n;i++)
    scanf("%d",ptr+i);
    int (*fptr)(int [],int);
    fptr=copy;
    fptr(ptr,n);
}
