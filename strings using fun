#include<stdio.h>
#define N 28
enum find{not_found=0,found};
int finding(char[],char);

int main()
{
    char str[N];
     char ch;
     printf("enter the char & string:");
    scanf("%s ",str);
    // printf("\nenter the string:");
    scanf("%c",&ch);
    int s;
    
    s=finding(str,ch);
     // printf("%d ",s);
    (s==found)?printf("char is found"):printf("char is not found");
    return 0;
}
int finding(char str[N],char ch)
{
int flag=not_found,i;
    
    for(i=0;str[i]!='\0';i++)
    {
        if(str[i]==ch)
        {
        flag++;
         // printf("%d ",flag);
        break;
    }
    }
   return flag;
}
